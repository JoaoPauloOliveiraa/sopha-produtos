<div id="<%= dom_id product %>">
  <p>
    <strong>Nome:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Código:</strong>
    <%= product.code %>
  </p>

  <p>
    <strong>Quantidade:</strong>
    <%= product.quantity %>
  </p>

  <p>
    <strong>Marca:</strong>
    <%= product.brand %>
  </p>

  <p>
    <strong>Data de fabricação:</strong>
    <%= product.manufactured_at.strftime('%d/%m/%Y') %>
  </p>

  <p>
    <strong>Vencimento:</strong>
    <%= product.due_date %>
  </p>

  <p>
    <strong>Preço:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Preço de custo:</strong>
    <%= product.cost_price %>
  </p>
  <%if product.image.persisted?%>
    <p class="text-center">
      <%= image_tag product.image, class: "img-fluid"%>
    </p>
  <%end%>
</div>


