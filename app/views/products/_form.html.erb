<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> Os campos são obrigatórios:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group mb-3">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :code, style: "display: block" %>
      <%= form.number_field :code, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :quantity, style: "display: block" %>
      <%= form.number_field :quantity, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :brand, style: "display: block" %>
      <%= form.text_field :brand, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :manufactured_at, style: "display: block" %>
      <%= form.date_field :manufactured_at, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :due_date, style: "display: block" %>
      <%= form.date_field :due_date, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :price, style: "display: block" %>
      <%= form.text_field :price, class: "form-control form-control-lg" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :cost_price, style: "display: block" %>
      <%= form.text_field :cost_price, class: "form-control form-control-lg"  %>
    </div>

    <div class="form-group mt-3">
      <%= form.submit class: "btn btn-primary btn-lg"%>
      <%= link_to "Voltar", products_path, class: "btn btn-outline-primary btn-lg" %>
    </div>
<% end %>
